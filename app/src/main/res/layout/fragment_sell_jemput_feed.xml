<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:cardCornerRadius="5dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/asset_shape"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_sell_jemput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="NAMA PENGEPUL"
                android:textColor="@android:color/holo_blue_light"/>
            <ImageView
                android:id="@+id/iv_icon_jemput"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="70dp"
                android:src="@drawable/ic_location"
                android:layout_below="@id/tv_sell_jemput" />
            <TextView
                android:id="@+id/tv_alamat_jemput"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="ALAMAT PENJUAL"
                android:textColor="@android:color/black"
                android:layout_below="@id/tv_sell_jemput"
                android:layout_toRightOf="@id/iv_icon_jemput"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="70dp"
                android:layout_marginBottom="10dp"
                android:layout_below="@id/iv_icon_jemput"
                android:text="Rp . 2000/kg"
                android:textSize="15dp"
                android:textColor="@android:color/black"/>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>