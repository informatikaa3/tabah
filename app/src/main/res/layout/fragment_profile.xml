<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:content="com.faedah.tabah.ui.Profile.ProfileFragment"
    android:background="@color/graylight"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_gravity="center_horizontal">
        <LinearLayout
            android:id="@+id/ll_top"
            android:background="@color/primaryDark"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center">
            <ImageView
                android:layout_marginTop="20dp"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/team_dimas"/>
            <TextView
                android:layout_marginTop="10dp"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CAU CIREBON"
                android:textColor="#fff"
                android:textStyle="bold"
                android:textSize="21sp"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginBottom="20dp">
                <ImageButton
                    android:id="@+id/img_saldo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_menu_slideshow"/>
                <TextView
                    android:id="@+id/tv_saldo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="Rp. 20.000"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:textColor="@color/graylight"
                    android:layout_marginLeft="20dp"
                    android:layout_toRightOf="@+id/img_saldo"/>

                <ImageButton
                    android:layout_centerVertical="true"
                    android:background="@color/primaryDark"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_menu_gallery"
                    android:layout_marginLeft="20dp"
                    android:layout_toRightOf="@+id/tv_saldo"/>
            </RelativeLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_mid"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_below="@+id/ll_top"
            android:orientation="horizontal">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="@color/primaryDark"
                android:text="Hsitori Transaksi"
                android:textSize="20dp"/>
        </LinearLayout>

        <LinearLayout
            android:paddingVertical="20dp"
            android:id="@+id/ll_bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ll_mid"
            android:layout_gravity="center"
            android:background="@color/primaryDark"
            android:orientation="vertical">
            <TextView
                android:paddingVertical="0dp"
                android:paddingHorizontal="8dp"
                android:id="@+id/tv_ll_bottom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tukar Saldo"
                android:textSize="21sp"
                android:textColor="@color/graylight"
                android:textStyle="bold" />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageButton
                    android:id="@+id/bt_ll_bottom_left"
                    android:layout_marginLeft="20dp"
                    android:src="@drawable/ic_menu_camera"
                    android:layout_width="80dp"
                    android:layout_height="80dp"/>
                <TextView
                    android:id="@+id/tv_ll_bottom_left"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pulsa"
                    android:textStyle="bold"
                    android:textSize="21sp"
                    android:textColor="@color/graylight"
                    android:layout_below="@+id/bt_ll_bottom_left"
                    android:layout_marginLeft="32dp"/>
                <ImageButton
                    android:id="@+id/bt_ll_bottom_center"
                    android:layout_marginLeft="40dp"
                    android:src="@drawable/ic_menu_gallery"
                    android:layout_toRightOf="@+id/bt_ll_bottom_left"
                    android:layout_width="80dp"
                    android:layout_height="80dp"/>
                <TextView
                    android:id="@+id/tv_ll_bottom_center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sedekah"
                    android:textStyle="bold"
                    android:textSize="21sp"
                    android:textColor="@color/graylight"
                    android:layout_below="@+id/bt_ll_bottom_center"
                    android:layout_toRightOf="@+id/tv_ll_bottom_left"
                    android:layout_marginLeft="55dp"/>
                <ImageButton
                    android:id="@+id/bt_ll_bottom_right"
                    android:layout_toRightOf="@+id/bt_ll_bottom_center"
                    android:layout_marginLeft="40dp"
                    android:src="@drawable/ic_menu_send"
                    android:layout_width="80dp"
                    android:layout_height="80dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bayar"
                    android:textStyle="bold"
                    android:textSize="21sp"
                    android:textColor="@color/graylight"
                    android:layout_below="@+id/bt_ll_bottom_right"
                    android:layout_toRightOf="@+id/tv_ll_bottom_center"
                    android:layout_marginLeft="51dp"/>

            </RelativeLayout>

        </LinearLayout>
