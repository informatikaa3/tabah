<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:content="com.faedah.tabah.ui.Profile.ProfileFragment"
    android:background="@color/graylight"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_gravity="center_horizontal">
        <LinearLayout
            android:id="@+id/ll_top"
            android:background="@drawable/asset_shape"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:radius="10dp">
            <ImageView
                android:layout_marginTop="20dp"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/team_dimas"/>
            <TextView
                android:layout_marginTop="10dp"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/cau_cirebon"
                android:textColor="@color/primaryDark"
                android:textStyle="bold"
                android:textSize="21sp"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginBottom="20dp">
                <ImageButton
                    android:id="@+id/img_saldo"
                    android:background="@drawable/asset_round_button"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_cycle"/>
                <TextView
                    android:id="@+id/tv_saldo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/rp_20_000"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:textColor="@color/primaryDark"
                    android:layout_marginLeft="20dp"
                    android:layout_toRightOf="@+id/img_saldo"/>

                <ImageButton
                    android:layout_centerVertical="true"
                    android:background="@drawable/asset_round_button"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_add"
                    android:layout_marginLeft="20dp"
                    android:layout_toRightOf="@+id/tv_saldo"/>
            </RelativeLayout>
        </LinearLayout>
        <LinearLayout

            android:id="@+id/ll_mid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ll_top"
            android:orientation="vertical">
            <TextView
                android:paddingHorizontal="8dp"
                android:layout_marginTop="10dp"
                android:id="@+id/tv_ll_mid_center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/primaryDark"
                android:text="@string/histori_transaksi"
                android:textSize="21dp"
                android:textStyle="bold"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_mid_sec"
            android:layout_below="@+id/ll_mid"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="horizontal">
            <androidx.cardview.widget.CardView
                app:cardCornerRadius="@dimen/asset_radius_card"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="15sp"
                android:layout_width="80dp"
                android:layout_height="50dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="@string/cek_dulu"
                    android:textSize="15sp"
                    android:textStyle="bold"/>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                app:cardCornerRadius="@dimen/asset_radius_card"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="15sp"
                android:layout_width="80dp"
                android:layout_height="50dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="@string/cek_kedua"
                    android:textStyle="bold"
                    android:textSize="15sp"/>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                app:cardCornerRadius="@dimen/asset_radius_card"
                android:layout_width="80dp"
                android:layout_height="50sp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="15sp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/cek_kedua"
                    android:gravity="center"
                    android:textSize="15sp"
                    android:textStyle="bold" />
            </androidx.cardview.widget.CardView>
            <ImageButton
                android:layout_marginLeft="25dp"
                android:layout_gravity="center"
                android:background="@drawable/asset_round_button"
                android:layout_width="40sp"
                android:layout_height="40sp"
                android:src="@drawable/ic_arrow_right"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ll_mid_sec"
            android:layout_gravity="center"
            android:background="@color/cardview_light_background"
            android:orientation="vertical">
            <TextView
                android:layout_marginBottom="5dp"
                android:paddingHorizontal="8dp"
                android:id="@+id/tv_ll_bottom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tukar_saldo"
                android:textSize="21sp"
                android:textColor="@color/primaryDark"
                android:textStyle="bold" />
            <RelativeLayout
                android:background="@drawable/asset_shape"
                android:layout_width="match_parent"
                android:layout_height="200dp">
                <ImageButton
                    android:layout_centerVertical="true"
                    android:background="@drawable/asset_round_button"
                    android:id="@+id/bt_ll_bottom_left"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/ic_menu_camera"
                    android:layout_width="80dp"
                    android:layout_height="80dp"/>
                <TextView
                    android:id="@+id/tv_ll_bottom_left"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/pulsa"
                    android:textStyle="bold"
                    android:textSize="21sp"
                    android:textColor="@color/primaryDark"
                    android:layout_below="@+id/bt_ll_bottom_left"
                    android:layout_marginLeft="25dp"/>
                <ImageButton
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/asset_round_button"
                    android:id="@+id/bt_ll_bottom_center"
                    android:layout_marginLeft="40dp"
                    android:src="@drawable/ic_menu_gallery"
                    android:layout_toRightOf="@+id/bt_ll_bottom_left"
                    android:layout_width="80dp"
                    android:layout_height="80dp"/>
                <TextView
                    android:id="@+id/tv_ll_bottom_center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/sedekah"
                    android:textStyle="bold"
                    android:textSize="21sp"
                    android:textColor="@color/primaryDark"
                    android:layout_below="@+id/bt_ll_bottom_center"
                    android:layout_toRightOf="@+id/tv_ll_bottom_left"
                    android:layout_marginLeft="51sp"/>
                <ImageButton
                    android:layout_centerVertical="true"
                    android:background="@drawable/asset_round_button"
                    android:id="@+id/bt_ll_bottom_right"
                    android:layout_toRightOf="@+id/bt_ll_bottom_center"
                    android:layout_marginLeft="40dp"
                    android:src="@drawable/ic_menu_send"
                    android:layout_width="80dp"
                    android:layout_height="80dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/bayar"
                    android:textStyle="bold"
                    android:textSize="21sp"
                    android:textColor="@color/primaryDark"
                    android:layout_below="@+id/bt_ll_bottom_right"
                    android:layout_toRightOf="@+id/tv_ll_bottom_center"
                    android:layout_marginLeft="51dp"/>

            </RelativeLayout>

        </LinearLayout>
    </RelativeLayout>
</LinearLayout>